@model SJAH20250326.AppWebMVC.Models.User

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>Usuario</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg p-3 mb-5" style="background-color: #e0f2f7; border: 1px solid #b0e0e6; border-radius: 10px;">
            <div class="card-body">
                <h2 class="card-title text-center mb-4" style="color: #4a6572;">Iniciar Sesión</h2>
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label" style="color: #4a6572;">Correo Electrónico</label>
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label" style="color: #4a6572;">Contraseña</label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="d-grid">
                        <input type="submit" value="Iniciar Sesión" class="btn btn-primary" style="background-color: #8ac6d1; border-color: #8ac6d1;" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}